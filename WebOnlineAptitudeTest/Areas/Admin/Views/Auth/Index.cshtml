@using WebOnlineAptitudeTest.Areas.Admin.Data.Model.User;
@model LoginRequest

@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/Content/assets/backend/plugins/assets/images/favicon.png">
    <title>Adminmart Template - The Ultimate Multipurpose admin template</title>
    <!-- Custom CSS -->
    <link href="/Content/assets/backend/plugins/dist/css/style.min.css" rel="stylesheet">
</head>

<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
             style="background:url(/Content/assets/backend/plugins/assets/images/big/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box row">
                <div class="col-lg-7 col-md-5 modal-bg-img"
                     style="background-image: url(/Content/assets/backend/plugins/assets/images/big/3.png);">
                </div>
                <div class="col-lg-5 col-md-7 bg-white">
                    <div class="p-3">
                        <div class="text-center">
                            <div class="navbar-brand">
                                <!-- Logo icon -->
                                <a>
                                    <b class="logo-icon">
                                        <!-- Dark Logo icon -->
                                        <img src="/Content/assets/backend/plugins/assets/images/logo-icon.png" alt="homepage" class="dark-logo" />

                                    </b>
                                    <!--End Logo icon -->
                                    <!-- Logo text -->
                                    <span class="logo-text">
                                        <!-- dark Logo text -->
                                        <img src="/Content/assets/backend/plugins/assets/images/logo-text.png" alt="homepage" class="dark-logo" />
                                    </span>
                                </a>
                            </div>
                        </div>
                        <h2 class="mt-3 text-center">Sign In</h2>
                        @using (Html.BeginForm("Index", "Auth", FormMethod.Post, new { @class = "mt-4" }))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    @if (@ViewBag.Error != "" && @ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger fade show" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                            @ViewBag.Error
                                        </div>
                                    }
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="text-dark" for="UserName">Username</label>
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "UserName", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="text-dark" for="Password">Password</label>
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", @type = "password" })
                                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" name="rememberMe" id="remember-me" @(Model.Remember == true ? "checked" : "")>
                                        <label class="custom-control-label" for="remember-me">Remember me</label>
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center mt-3">
                                    <button type="submit" class="btn btn-block btn-dark">Sign In</button>
                                </div>
                                <div class="mt-6"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Content/assets/backend/plugins/assets/libs/jquery/dist/jquery.min.js "></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="/Content/assets/backend/plugins/assets/libs/popper.js/dist/umd/popper.min.js "></script>
    <script src="/Content/assets/backend/plugins/assets/libs/bootstrap/dist/js/bootstrap.min.js "></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
        $(".preloader ").fadeOut();
    </script>
</body>

</html>