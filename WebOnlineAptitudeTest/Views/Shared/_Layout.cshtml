<!DOCTYPE html>
<html lang="en">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="/Content/assets/backend/dist/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CANDIDATE - @ViewBag.Title</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="/Content/assets/backend/dist/css/app.css" />
          @RenderSection("Styles", false)
          @Styles.Render("~/Content/site")

</head>
<!-- END: Head -->
<body class="app fixed top-0">
    <!-- BEGIN: Mobile Menu -->
    @Html.Action("MenuMobile", "Menu")
    <!-- END: Mobile Menu -->
    <div class="main flex">
        <!-- BEGIN: Side Menu -->

        @Html.Action("Menu", "Menu")

        <!-- END: Side Menu -->
        <!-- BEGIN: Content -->
        <div class="content min-h-full">

            <!-- BEGIN: Top Bar -->
            <!-- END: Top Bar -->

            @RenderBody()

        </div>
        <!-- END: Content -->
    </div>

    @Html.Partial("_ModalAlert")
    @Html.Partial("_ModalConfirm")
    <!-- BEGIN: JS Assets-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
    @*<script src="https://maps.googleapis.com/maps/api/js?key=[" your-google-map-api"]&libraries=places"></script>*@



    @RenderSection("Scripts", false)
    <script src="/Scripts/jquery.twbsPagination.min.js"></script>

    <script>
        $('#pagination-demo').twbsPagination({
            totalPages: 50,
            visiblePages: 5
        });

    </script>
    <script>
        $().ready(function () {
            $("#demoForm").validate({
                rules: {
                    "user": {
                        required: true,
                        maxlength: 15
                    },
                    "password": {
                        required: true,
                        minlength: 8
                    },
                    "re-password": {
                        equalTo: "#password",
                        minlength: 8
                    }
                }
            });
        });
    </script>

    <script src="/Content/assets/backend/dist/js/app.js"></script>

</body>
</html>